                                @Html.EditorFor(model => model.socmtndnguoinhan, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.socmtndnguoinhan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.socmtndkh, "Số CMTND KH", htmlAttributes: new { @class = "control-label col-md-7" })
                                @Html.EditorFor(model => model.socmtndkh, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.socmtndkh, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    &nbsp;&nbsp;<button type="submit" value="Create" class="btn btn-primary"> <i class="fa fa-plus"></i>&nbsp;Thêm</button>
                </div>
            </form>
        </div>
    }
    <script src="~/Scripts/jquery.validate.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
