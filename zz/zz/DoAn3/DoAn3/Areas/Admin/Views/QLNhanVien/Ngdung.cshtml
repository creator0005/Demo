                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Mật Khẩu</label>
                                            <input type="text" class="form-control" ng-model="matkhau" placeholder="Password">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Địa Chỉ</label>
                                            <input type="text" class="form-control" ng-model="diachi" placeholder="Địa Chỉ">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Số Điện Thoại</label>
                                            <input type="text" class="form-control" ng-model="sdt" placeholder="Số Điện Thoại">
                                        </div>
                                        <div>
                                            <ul>
                                                <li>{{mand}}</li>
                                                <li>{{tennd}}</li>
                                                <li>{{taikhoan}}</li>
                                                <li>{{matkhau}}</li>
                                                <li>{{diachi}}</li>
                                                <li>{{sdt}}</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </form>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-between">
                            <button type="submit" class="btn btn-primary" onclick="Edit()" data-dismiss="modal" ng-click="Sua()">Save</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        </section>

