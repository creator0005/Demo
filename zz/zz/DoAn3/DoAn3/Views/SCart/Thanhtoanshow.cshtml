@{
    ViewBag.Title = "Thanhtoanshow";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}

<br />

<div class="bar-top">
    <a href="/Home/Index" class="buymore"><img src="~/Images/quayve.png" alt="Trở lại" />Trở về Trang Chủ</a>
</div><br />
<div style="display:block;border: 1px solid #d8d8d8;box-shadow: 0 0 20px rgba(0,0,0,.15);">
    <div class="card-header" style="background-color:#fed101;color:#1f2d3d;border-radius: calc(.35rem - 1px) calc(.35rem - 1px) 0 0;
        padding:.75rem 1.25rem;border-bottom: 1px solid #e3e6f0;margin-bottom:2%">
        <h2 style="text-align:center;color:black">Giỏ Hàng Của Bạn</h2>
    </div>
    <hr />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên Sản Phẩm</th>
                <th>Ảnh</th>
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
                <th>Tác Vụ</th>
            </tr>
        </thead>
        <tbody id="dssp"></tbody>
    </table>
    <form action="" method="post">
        <a href="/Home/Index" class="btn btn-default but" style="background:#ef4339;border: 1px solid #ef4339;font-weight:600">
            <span class="glyphicon glyphicon-plus sp"></span>
            <span class="txt" style="color:#fff">Mua Thêm</span>
        </a>
        <a href="/SCart/xacnhanthanhtoan" class="btn btn-default but" style="background:#ef4339;border: 1px solid #ef4339;font-weight:600">
            <span class="glyphicon glyphicon-ok sp"></span>
            <span class="txt" style="color:#fff">Tiến Hành Thanh Toán</span>
        </a>
    </form>
    <style>

        .but:hover {
            background-color: #fff !important;
            color: #ef4339 !important;
        }

        .but .sp:hover {
            color: #ef4339 !important;
        }

        .but .txt:hover {
            color: #ef4339 !important;
        }
    </style>

</div>
