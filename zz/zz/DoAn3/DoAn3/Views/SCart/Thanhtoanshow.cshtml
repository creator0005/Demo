<script>
    $(Document).ready(function () {
        $.get("Thanhtoan", function (res) {
            $.each(res, function (i, v) {
                $("#dssp").append("<tr><td>" + v.id + "</td><td>" + v.tensp + "</td><td> <img src='~/Content/Image Phones/Iphone/'" + v.anh + "</td><td>" + v.soluong + "</td><td>" +
                    v.dongia + "</td><td>" + v.thanhtien + "</td><td><a href='xoagiohangsp/" +
                    v.id + "'class='btn btn-danger'>Xóa</a></td></tr>");
            });
        });

    });
</script>

