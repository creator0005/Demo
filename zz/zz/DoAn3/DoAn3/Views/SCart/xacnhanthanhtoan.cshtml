                                      <input type="text" class="form-control" id="dc1" name="dc1" value="" placeholder="Địa Chỉ Khách Hàng" />
                                  </div>
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-sm-12">
                                  <div class="form-group">
                                      <input type="text" class="form-control" id="dc2" name="dc2" value="" placeholder="Địa Chỉ Người Nhận" />
                                  </div>
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-sm-12">
                                  <div class="form-group">
                                      <input type="number" class="form-control" id="cmt1" name="cmt1" value="" placeholder="CMTND người nhận" />
                                  </div>
                              </div>

                          </div>
                          <div class="row">
                              <div class="col-sm-12">
                                  <div class="form-group">
                                      <input type="number" class="form-control" id="cmt2" name="cmt2" value="" placeholder="CMTND khách hàng" />
