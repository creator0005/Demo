<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EcoMart - Cửa Hàng Bán Điện Thoại Uy Tín, Chất Lượng Hàng Đầu Việt Nam</title>
    <link href="Contents/img/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!--jquery first, bootstrap later-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="container" style="margin:0 auto;padding:0; background-color:#ffffff">
        <div>
            <img src="~/Images/banner_header_top.jpg" style="height:50px;width:1365px;margin-left:-9%;" />
        </div>
        <header class="nn-header" style="background-color:#ef4339;margin-top:0%;width:1365px;margin-left:-9%">
            <div class=" col-sm-3 col-md-3 nn-text-align-center">
                <a href="/Home/Index">
                    <img src="~/Images/eco-mart.com.vn.jpg" style="width:100%;height:auto;padding: 10px;border-radius:4px;margin-left:26%" class="img-responsive" />
                </a>
            </div><!--end logo-->
            <div class="col-md-6 col-sm-6 ">
                @Html.Partial("_Search")
            </div><!--end search box-->
            @Html.Partial("_ShopCart")

        </header>
        @Html.Partial("_Menu")
        <div @*class="container row"*@ style="background-color:#f0f0f0">
            <div class="col-md-2 col-sm-2">

            </div>
            <div class="col-md-9 col-sm-8 col-lg-8 col-xs-12">
                @RenderBody()
            </div>
            <div class="col-md-2 col-sm-2">

            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
