<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EcoMart - Cửa Hàng Bán Điện Thoại Uy Tín, Chất Lượng Hàng Đầu Việt Nam</title>
    <link href="Contents/img/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!--jquery first, bootstrap later-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    @{
        var songuoi = HttpContext.Current.Application["songuoitruycap"].ToString();
    }
    @*<div class="row">
            @{
                <h3>Số người online:@songuoi</h3>
            }
        </div>*@
    <div class="icon-bar">
        <a href="https://www.facebook.com/ecomobilevn" class="facebook"><i class="fa fa-facebook"></i></a>
        <a href="https://mobile.twitter.com/" class="twitter"><i class="fa fa-twitter"></i></a>
        <a href="https://mail.google.com/" class="google"><i class="fa fa-google"></i></a>
        <a href="https://www.linkedin.com/" class="linkedin"><i class="fa fa-linkedin"></i></a>
        <a href="https://www.youtube.com/?gl=VN" class="youtube"><i class="fa fa-youtube"></i></a>
    </div>
    <style>
        .icon-bar {
            position: fixed;
            top: 75%;
            width:4.5%;
            -webkit-transform: translate(1284px,-140px);
            -ms-transform: translate(1284px,-140px);
            /*transform: translateY(-50%);*/
            transform: translate(1284px,-140px);
        }

        .icon-bar a {
            display: block;
            text-align: center;
            padding: 16px;
            transition: all 0.3s ease;
            color: white;
            font-size: 20px;
        }

        .icon-bar a:hover {
            background-color: #000;
        }

        .facebook {
            background: #3B5998;
            color: white;
        }

        .twitter {
            background: #55ACEE;
            color: white;
        }

        .google {
            background: #dd4b39;
            color: white;
        }

        .linkedin {
            background: #007bb5;
            color: white;
        }

        .youtube {
            background: #bb0000;
            color: white;
        }
    </style>
    <div class="container" style="margin:0 auto;padding:0; background-color:#ffffff">
        <div>
            <img src="~/Images/banner_header_top.jpg" style="height:50px;width:1353px;margin-left:-8%;" />
        </div>
        <header class="nn-header" style="background-color:#ef4339;margin-top:0%;width:1353px;margin-left:-8%">
            <div class=" col-sm-3 col-md-3 nn-text-align-center">
                <a href="/Home/Index">
                    <img src="~/Images/eco-mart.com.vn.jpg" style="width:100%;height:auto;padding: 10px;border-radius:4px;margin-left:22%" class="img-responsive" />
                </a>
            </div><!--end logo-->
            <div class="col-md-6 col-sm-6 ">
                @Html.Partial("_Search")
            </div><!--end search box-->
            @Html.Partial("_ShopCart")
        </header>
        @Html.Partial("_Menu")
        <div class="container row" style="margin-top:-3%">
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                @Html.Action("Category", "Home")
                @Html.Action("SaleOff", "Home")
                <div style="background-color:#f3f3f3 !important;height:12%"></div>
                @Html.Action("Special", "Home")
                @Html.Partial("_AddBanner")



            </div><!--end left-sidebar-->
            <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Images/slide4.png" alt="Sản phẩm thịnh hành hiện nay" style="height:90%;width:100%">
                        </div>

                        <div class="item">
                            <img src="~/Images/slide2.png" alt="Tưng bừng khuyến mại" style="height:90%;width:100%">
                        </div>

                        <div class="item">
                            <img src="~/Images/slide3.png" alt="Mua liền ngay tặng quà kèm" style="height:90%;width:100%">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                @RenderBody()
            </div>
        </div>
        <div class="container row">
            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                <img src="~/Images/banner-leng.jpg" alt="Alternate Text" />
            </div>
        </div>
        <br />
        <br />
        @Html.Partial("_Footer")

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/css/jquery-ui.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-ui.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            $("#search").autocomplete({
                source: "/Home/Search",
                minLength: 2
            });
        })
    </script>
</body>
</html>
