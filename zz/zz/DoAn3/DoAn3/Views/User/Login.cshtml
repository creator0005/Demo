@model DoAn3.Models.LoginModel
@{
    Layout = null;
}

<link href="~/Assets/admin/vendor/fontawesome-free/css/fontawesome.min.css" rel="stylesheet" />
<link href="~/Assets/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
<link href="~/Assets/admin/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Assets/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/41101bb560.js" crossorigin="anonymous"></script>

<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-4 col-md-4" style="margin-top:8%">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-3">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Đăng Nhập</h1>
                                    </div>
                                    @using (Html.BeginForm("Login", "User", FormMethod.Post)) 
                                    {
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                                        <fieldset>
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.taikhoan, new { @class = "form-control form-control-user", @autofocus = "autofocus", @placeholder = "Nhập tài khoản..." })
                                                @*<input type="email" required class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Account...">*@
                                            </div>
                                            <div class="form-group">
                                                @Html.PasswordFor(model => model.matkhau, new { @class = "form-control form-control-user", @autofocus = "autofocus"@*, @required = "required"*@,
@placeholder = "Nhập mật khẩu..."
})
                                                @*<input type="password" required class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">*@
                                            </div>
                                            <button onclick="Login()" type="submit" class="btn btn-primary btn-user btn-block">
                                                Đăng nhập
                                            </button>
                                        </fieldset>
                                        @*<a href="https://accounts.google.com/" class="btn btn-google btn-user btn-block">
                                                <i class="fab fa-google fa-fw"></i> Đăng nhập bằng Google
                                            </a>
                                            <a href="https://facebook.com" class="btn btn-facebook btn-user btn-block">
                                                <i class="fab fa-facebook-f fa-fw"></i> Đăng nhập bằng FaceBook
                                            </a>*@
                                    }
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/User/Forgot">Quên mật khẩu?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/User/Register">Tạo tài khoản mới</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            function Login() {
                {
                    location.href = "/Home/Index";
                }
            }
        </script>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Assets/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Assets/admin/js/sb-admin-2.min.js"></script>
</body>

